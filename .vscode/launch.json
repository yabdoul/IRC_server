{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug IRC Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ircserv",
            "args": ["6667", "password123"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print elements to unlimited",
                    "text": "-gdb-set print elements 0",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print repeats to unlimited",
                    "text": "-gdb-set print repeats 0",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build IRC Project (Debug)"
        },
        {
            "name": "Debug IRC Server (Custom Args)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ircserv",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print elements to unlimited",
                    "text": "-gdb-set print elements 0",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print repeats to unlimited",
                    "text": "-gdb-set print repeats 0",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build IRC Project (Debug)"
        },
        {
            "name": "Attach to Running IRC Server",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/ircserv",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print elements to unlimited",
                    "text": "-gdb-set print elements 0",
                    "ignoreFailures": true
                },
                {
                    "description": "Set print repeats to unlimited",
                    "text": "-gdb-set print repeats 0",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}